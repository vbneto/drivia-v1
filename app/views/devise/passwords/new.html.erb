<div class="row">
  <div class="login-main-box">
    <h2>Forgot your password?</h2>
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
      <%= devise_error_messages! %>
      <div class="row">
        <%= f.email_field :email, placeholder:"Enter your Email",class: "col-md-12 col-sm-12 col-xs-12 top-space" %>
      </div>  
      
      <div class="row forgot-pass">
        <div class="col-md-12 col-sm-4 col-xs-12 padd_none">
          <%= f.submit "Send me reset password instructions",class:"login" %> 
        </div>
      </div>
    <% end %>
  </div>  
</div>


