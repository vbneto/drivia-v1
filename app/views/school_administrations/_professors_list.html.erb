<div id='show_professor_list' class ="list_margin">
  
  <h5>List of the professors of your school</h5>
  <table class="table table-striped table-bordered table_border_style">
    <thead>
    <tr>
      <th><%= t('school_administration.student_list.professor_name') %> </th>
      <th><%= t('school_administration.student_list.current_grade') %></th>
      <th><%= t('school_administration.student_list.subject_name') %></th>
      <th><%= t('school_administration.student_list.first_access') %></th>
      <th><%= t('school_administration.student_list.active') %></th>
    </tr>
    </thead>
    <tbody>
      <% @professors.each do |professor| %>
        <tr>
          <td class = "grade_colom_width"><%= link_to professor.professor_record.name, "#" %></td>
          <td class = "grade_colom_width"><%= professor_current_grade professor %></td>
          <td><%= professor.subject.name %></td>
          <td><%= is_professor_first_access professor %></td>
          <td><%= set_professor_status professor %></td>
          
          <td class ="column_width">
            <%= link_to t('school_administration.student_list.expand'), 'javascript:void(0);',:onclick => 'expand_professor_details('+professor.id.to_s+')', :class=>"expandcollapse btn btn-normal btn-primary pull-right icon-white icon-plus-sign " if (is_professor_first_access professor)%>
          </td>
          <td class = "activate">
            <%= link_to show_professor_status(professor), change_professor_status_school_administration_path(professor.id), :class => "btn btn-primary btn-normal active icon-white", method: :post,:confirm=>'Do You Want To '+ show_professor_status(professor) +' This Professor?' %>
          </td>
          <td class = "column_width">
            <%= link_to t("school_administration.student_list.edit"), edit_professor_record_school_administrations_path(school_grade_id: professor.id), :class => "btn btn-primary btn-normal active icon-white icon-edit icon-width" if (is_professor_active professor) %>
          </td>
          
        </tr>
        <tr>
          <td id='professor_<%=professor.id%>' class='student_details' colspan="5">
          <table class="table table-striped table-bordered table_border_style" width = 70% >  
            <tr> <th><%= t('school_administration.student_list.code')%></th><td><%= professor.professor_record.code%> </td> </tr>
            <tr> <th><%= t('school_administration.student_list.professor_name') %></th><td><%= professor.professor_record.name%></td> </tr>
            <tr> <th><%= t('school_administration.student_list.email') %></th><td><%= professor_email professor  %> </td> </tr>
            <tr> <th><%= t('school_administration.student_list.phoneprefix') %></th><td><%= professor_phoneprefix professor  %> </td> </tr>
            <tr> <th><%= t('school_administration.student_list.phone') %></th><td><%= professor_phone professor %> </td> </tr>
          </table>
          </td>
        </tr>
      <%end%>
    </tbody>  
  </table>
</div>
