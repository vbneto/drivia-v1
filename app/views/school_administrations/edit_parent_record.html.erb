<%= back_button %>
<div class="container">
  <div id = "subject_list" class = "panel panel-default" >  
     <div class = "panel-heading">
       <h5>Edit Parent</h5>
     </div>
     <div class = "panel-body"> 
        <%= form_for @parent_record, url: update_parent_school_administrations_path(:id => @parent_record), method: :post do|f|%>
          <% if @parent_record.errors.any? %>
          <div id="error_explanation">
          <h2><%= pluralize(@parent_record.errors.count, "error") %>Something went wrong!</h2>
          <ul>
          <% @parent_record.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          <% end %>
          <table>  
            <tr>
              <td><%= f.label :name %></td>
              <td><%= f.text_field :name %></td>
            </tr>
            <tr>  
              <td><%= f.label :phoneprefix %></td>
              <td><%= f.text_field :phoneprefix %></td>
            </tr>  
            <tr>
              <td><%= f.label :phone %></td>
              <td><%= f.text_field :phone %></td>
            </tr>
           
            <div>
              <%= f.fields_for :parent do |builder| %>
                 <tr>  
                    <td><%= builder.label :birth_day %></td>
                    <td><%= builder.text_field :birth_day, :value => change_date_formate(@parent_record.parent.birth_day), :class => 'datepicker' %>
                    </td>
                 </tr>
              <% end %>
            </div>
          </table>
          <%= f.submit "update", :class=>'btn'%>
        <%end%>
     </div>
  </div>
</div>  

<script type="text/javascript">
  $('#user_parent_attributes_birth_day').datepicker({
    format: "dd/mm/yyyy",
    viewMode: "years",
    startView: 2
  });
  
</script>
