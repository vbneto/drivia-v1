<div id="subject_list" class="span6 move_down">
  <%= back_button %>
  <h5><%= t('school_administration.show_parent.record_of_the_parent') %></h5>
  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <tbody>
      <tr><th><%= t('school_administration.show_parent.name') %></th><td><%= @parent.name%></td></tr>
      <tr><th><%= t('school_administration.show_parent.email') %></th><td><%= @parent.email%></td></tr>
      <tr><th><%= t('school_administration.show_parent.phoneprefix') %></th><td><%= @parent.phoneprefix%></td></tr>
      <tr><th><%= t('school_administration.show_parent.phone') %></th><td><%= @parent.phone%></td></tr>
      <tr><th>Responsible for student</th>
        <td>
          <% @parent.parent.student_from_excels.each do |student|%>
            <%=link_to student.student_name, show_student_school_administration_path(student.id)%>
          <% end %>
        </td>
      </tr>
      <tr><th>Birth day:</th><td><%= change_date_formate @parent.parent.birth_day %></td></tr>
      </tbody>
    </thead>
  </table>
  <%= link_to "edit", edit_parent_record_school_administrations_path(parent_id: @parent.id ), :class => "btn btn-primary" %>
</div>
